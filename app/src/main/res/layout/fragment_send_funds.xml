<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="24dp"
        android:id="@+id/send_fund_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/send_eth"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/search_box_bkgrd"
            android:text="@string/send_ether" />

        <Button
            android:id="@+id/send_btc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/search_box_bkgrd"
            android:text="@string/send_send_btc" />
    </LinearLayout>

    <ImageView
        android:id="@+id/send_fund_close_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/send_fund_layout"
        android:layout_alignRight="@+id/send_fund_layout"
        android:layout_gravity="top|right"
        android:layout_marginTop="-8dp"
        android:layout_marginRight="-8dp"
        android:clickable="true"
        android:src="@drawable/ic_close" />
</FrameLayout>